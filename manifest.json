{
  "manifest_version": 3,
  "name": "BlueCanary Shortcut",
  "version": "1.0",

  "description": "Adds a bookmark button to every Bluesky post to send quick reports to kiiroy",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/main/beastify",
  "icons": {
  },

  "permissions": ["activeTab", "storage", "scripting"],

  "background": {
    "scripts": ["dist/background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://bsky.app/*"],
      "js": ["dist/content_script.js"]
    }
  ],

  "action": {
    "default_title": "Blue Canary Shortcut",
    "default_popup": "src/popup/popup.html"
  }
}
